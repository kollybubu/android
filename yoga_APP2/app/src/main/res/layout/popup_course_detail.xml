<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:elevation="8dp"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/popupDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day: "/>

    <TextView
        android:id="@+id/popupTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "/>

    <TextView
        android:id="@+id/popupCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity: "/>

    <TextView
        android:id="@+id/popupDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: "/>

    <TextView
        android:id="@+id/popupPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "/>

    <TextView
        android:id="@+id/popupType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of class: "/>

    <TextView
        android:id="@+id/popupDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "/>

</LinearLayout>
